			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-versions-plugin</artifactId>
				<version>2.1</version>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>Tomcat-CSL</id>
			<activation>
				<property>
					<name>location</name>
